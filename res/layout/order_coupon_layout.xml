<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/coupon_title"
            style="@style/style_16_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="优惠券" />

        <TextView
            android:id="@+id/coupon_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_address_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1张可使用"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/coupon_title"
            android:textColor="#ffffff" />

        <TextView
            style="@style/style_14_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pay_right_image2"
            android:text="未使用" />

        <ImageView
            android:id="@+id/pay_right_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>

</LinearLayout>